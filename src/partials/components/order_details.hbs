<tr>
  <td class="padder-wrapper">
    <p>Your order details for ${transaction.tranid} are:</p>
    <table class="order_details hedges" cellpadding="0" cellspacing="0">
    <#list transaction.item as item><#if item_index==0>
      <thead>
        <tr>
          <th>${item.quantity@label}</th>
          <th>${item.description@label}</th>
        </tr>
      </thead>
      <tbody>
      </#if>
      <tr>
        <td>${item.quantity}</td>
        <td>${item.description}</td>
      </tr>
      </#list>
      </tbody>
    </table>
  </td>
</tr>
